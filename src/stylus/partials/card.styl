cardPadding = 2em
cardMaxWidth = 600px
cardWidth = 100%
cardRadius = 4px
cardFontSize = .875em
cardMargin = 4em .5em
cardShadowColor = rgb(200,200,200)

.card
  background white
  font-size cardFontSize
  width cardWidth
  max-width cardMaxWidth
  margin cardMargin
  border-radius cardRadius
  if useShadow
    box-shadow 0px 3px 5px cardShadowColor
  header
    background url(public/images/thumb.jpg)
    background-size cover
    background-position center
    width 100%
    height 200px
    border-radius cardRadius cardRadius 0 0
  .card-body
    padding cardPadding
    .card-actions
      border-top 1px solid #333
      padding cardPadding 0 0 0