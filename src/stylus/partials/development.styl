.machine_btn
	width 80px
	height 80px
	background-color #fc7d7d
	position fixed
	right 0
	top 0
	display block
	cursor pointer
	transition transform .2s ease-in-out
	z-index 2
	svg
		width 60px
		height 52px
		margin 14px 10px

.home_btn
	width 80px
	height 80px
	background-color white
	position fixed
	left 80px
	top 0
	display block
	&:hover
		opacity 1
	svg
		width 30px
		height 30px
		margin 25px
		transition transform .2s ease-in-out
		
.machine_btn.open
	z-index 9
	
.home_btn:hover
	svg
		transform scale(1.2)

.main
	display flex
	flex-wrap wrap
	align-content flex-end
  section
		padding 40px
		flex-grow 1
		
.text
	width 100%
	padding 80px 0
	font-size 1.35em
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul
		max-width 800px
		margin-left auto
		margin-right auto
		text-transform none
	p
		font-family georgia, serif
		color #333
		strong
			font-family 'brandon_textbold', sans-serif
			
	p:nth-of-type(1)
		font-family: inherit
		color #7F6C6C
	figure
		margin 80px auto
		width 80%
	img
		width 100%
		

.machine-menu
	position fixed
	width 100%
	height 100vh
	right 0
	top 0
	background-color #fc7d7d
	z-index 3
	transition transform .2s ease-in-out
	transform-origin top right
	.machine-grid
		display flex
		flex-wrap wrap
		align-content flex-start
		li
			display inline-block
			
.machine-menu.closed
	transform scale(0)
.machine-menu.open
	transform scale(1)
.machine-grid
	height 100%
	.machineThumb
		text-align center
		padding 20px
		display inline-block
		.machineLink
			position absolute
			left 0
			top 0
			right 0
			bottom 0
		figure
			margin 0 0 30px 0
		img
			max-width 60%
			
